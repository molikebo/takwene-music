---
import TextSlider from "../components/TextSlider.astro";
import Separator from "../components/Separator.astro";

// Get the current pathname
const currentPath = Astro.url.pathname;

// Define a map of routes for the navigation
const routes = {
  "/": "Artists", // الصفحة الرئيسية (الـ Home) هي الآن صفحة الفنانين
  "/releases/": "Releases",
  "/store/": "Store",
  "/contact/": "Contact",
  "/articles/": "Articles", // استعداداً لقسم المقالات
  // تم حذف "/history/" من هنا
};

// Determine the active route
// إذا كان المسار هو "/"، فسنعتبره "Artists" ليعمل التحديد الصحيح في النافبار
const activeRoute = routes[currentPath] || null;
const displayActiveRoute = currentPath === "/" ? "Artists" : activeRoute;
---

<header>
  <h1>
    <a href="/" class={displayActiveRoute === "Artists" ? "current" : ""}
      ><TextSlider content="Takwene Music" /></a>
  </h1>
  <span><TextSlider content="Artists" /></span>
  <ul>
    <li>
      <a
        href="/"
        class={displayActiveRoute === "Artists" ? "current" : ""}
        data-astro-prefetch><TextSlider content="Artists" /></a>
    </li>
    <li>
      <a
        href="/releases/"
        class={activeRoute === "Releases" ? "current" : ""}
        data-astro-prefetch><TextSlider content="Releases" /></a>
    </li>
    <li>
      <a
        href="/articles/"
        class={activeRoute === "Articles" ? "current" : ""}
        data-astro-prefetch><TextSlider content="Articles" /></a>
    </li>
    <li>
      <a
        href="/store/"
        class={activeRoute === "Store" ? "current" : ""}
        data-astro-prefetch><TextSlider content="Store" /></a>
    </li>
    <li>
      <a
        href="/contact/"
        class={activeRoute === "Contact" ? "current" : ""}
        data-astro-prefetch><TextSlider content="Contact" /></a>
    </li>
  </ul>
</header>
<Separator />

<style>
  header {
    position: relative;
    display: grid;
    grid-template-columns: min-content auto;
    font-weight: 700;
    padding: 1rem 0;
    gap: 1rem;
  }
  header a.current {
    pointer-events: none;
  }
  h1 {
    font-size: 1rem;
    font-weight: inherit;
    margin: 0;
  }
  ul {
    display: flex;
    list-style: none;
    gap: 1rem;
    margin: 0;
    padding: 0;
    grid-column: auto / span 2;
  }
  @media screen and (min-width: 50em) {
    header {
      grid-template-columns: 20vw 1fr auto auto;
    }
  }
</style>